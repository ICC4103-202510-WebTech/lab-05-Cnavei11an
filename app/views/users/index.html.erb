<h1>Users</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Email</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Actions</th>
    <th>Messages</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td>
        <%= link_to "View", user_path(user) %> |
        <%= link_to "Edit", edit_user_path(user) %>
      </td>
      <td>     <%= user.messages.count %></td>
    </tr>
  <% end %>
</table>

<%= link_to "New user", new_user_path %>
